{%- if include.mobile -%}
  {%- comment -%} Mobile Theme Toggle {%- endcomment -%}
  <button id="mobile-light-toggle" class="mobile-theme-toggle" title="Change theme" aria-label="Toggle dark mode">
    <i class="ti ti-sun-moon" id="mobile-light-toggle-system" aria-hidden="true"></i>
    <i class="ti ti-moon-filled" id="mobile-light-toggle-dark" aria-hidden="true"></i>
    <i class="ti ti-sun-filled" id="mobile-light-toggle-light" aria-hidden="true"></i>
  </button>
{%- else -%}
  {%- comment -%} Desktop Theme Toggle {%- endcomment -%}
  <button id="light-toggle" title="Change theme" aria-label="Toggle dark mode">
    <i class="ti ti-sun-moon" id="light-toggle-system" aria-hidden="true"></i>
    <i class="ti ti-moon-filled" id="light-toggle-dark" aria-hidden="true"></i>
    <i class="ti ti-sun-filled" id="light-toggle-light" aria-hidden="true"></i>
  </button>
{%- endif -%}
